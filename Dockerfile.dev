# Development Dockerfile for hot reload
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy package files
COPY package.json pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install

# Expose port 3000
EXPOSE 3000

# Start development server
CMD ["pnpm", "dev"]
